<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import
            alias="MODE"
            type="org.udoo.udooblulib.model.IOPin.IOPIN_MODE" />

        <variable
            name="iopin"
            type="org.udoo.udooblulib.model.IOPin" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/space_material">

        <TextView
            android:id="@+id/text_pin"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:text="@{iopin.pin.name}"
            android:textStyle="bold"
            tools:text="A0" />

        <TextView
            android:id="@+id/text_mode"
            style="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_pin"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/space_material"
            android:text="@{iopin.mode.name}"
            tools:text="INPUT" />

        <TextView
            android:id="@+id/text_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:background="@drawable/rect_stroke_divider"
            android:padding="@dimen/space_material"
            android:text='@{ iopin.mode ==MODE.ANALOG?  "" +iopin.analogValue : iopin.digitalValue.name}'
            android:visibility="@{(iopin.mode ==MODE.ANALOG || iopin.mode ==MODE.DIGITAL_INPUT)? View.VISIBLE : View.GONE}"
            tools:text="HIGH" />

        <Switch
            android:id="@+id/switch_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:visibility="@{iopin.mode == MODE.DIGITAL_OUTPUT ? View.VISIBLE : View.GONE}" />

        <View
            android:id="@+id/divider"
            android:layout_marginTop="@dimen/space_material"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/text_mode"
            android:background="@color/divider" />

    </RelativeLayout>
</layout>