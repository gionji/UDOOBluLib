<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="oadModel"
            type="org.udoo.bluhomeexample.model.OADModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingStart="@dimen/min_space_material"
        android:paddingEnd="@dimen/min_space_material"
        android:paddingTop="@dimen/item_margin"
        android:paddingBottom="@dimen/item_margin"
        android:layout_height="150dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="@dimen/cardview_default_elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/min_space_material">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{oadModel.name}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    tools:text="Name" />

                <TextView
                    android:id="@+id/text_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="end"
                    android:text="@{oadModel.data}"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    tools:text="01-02-1990" />
            </LinearLayout>

            <TextView
                android:id="@+id/text_ver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{oadModel.version}"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                tools:text="Ver." />

            <TextView
                android:id="@+id/text_descr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/min_space_material"
                android:text="@{oadModel.description}"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                tools:text="Temperature humidity ecc.." />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    </RelativeLayout>
</layout>