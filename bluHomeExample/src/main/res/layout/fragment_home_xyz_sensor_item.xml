<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="sensor"
            type="org.udoo.udooblulib.model.XYZSensor" />
    </data>
    <android.support.v7.widget.CardView
        android:layout_margin="@dimen/min_space_material"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:id="@+id/sensor_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/min_space_material"
                android:text="@{sensor.name}"
                tools:text="Accelerometer" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/min_space_material"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_marginRight="@dimen/min_space_material"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:id="@+id/sensor_x"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="x:" />


                    <TextView
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:id="@+id/sensor_x_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{sensor.x}"
                        android:layout_alignParentRight="true"
                        tools:text="0,004" />

                    <TextView
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:id="@+id/sensor_y"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/sensor_x"
                        android:text="y:" />

                    <TextView
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:id="@+id/sensor_y_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{sensor.y}"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/sensor_x"
                        tools:text="0,004" />

                    <TextView
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:id="@+id/sensor_z"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/sensor_y"
                        android:text="z:" />

                    <TextView
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:id="@+id/sensor_z_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/sensor_y"
                        android:text="@{sensor.z}"
                        tools:text="0,004" />


                </RelativeLayout>

                <ImageView
                    android:id="@+id/sensor_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@{sensor.imgResource}"
                    tools:src="@drawable/accelerometer" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>