<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="blu"
            type="org.udoo.bluhomeexample.model.BluItem" />

        <variable
            name="greenLed"
            type="org.udoo.bluhomeexample.model.Led" />

        <variable
            name="yellowLed"
            type="org.udoo.bluhomeexample.model.Led" />

        <variable
            name="redLed"
            type="org.udoo.bluhomeexample.model.Led" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/space_material"
        android:layout_marginStart="@dimen/space_material"
        android:layout_marginTop="@dimen/space_material"
        android:alpha="@{blu.isFound ? 1.0f : 0.5f}"
        android:backgroundTint="@{blu.isConnected ? blu.color : @android:color/white}"
        android:elevation="@dimen/cardview_default_elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_blu_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/space_material"
                android:layout_marginStart="@dimen/space_material"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_blu"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginStart="@dimen/space_material"
                    android:layout_weight="3"
                    android:rotation="-90"
                    android:src="@drawable/udooblu" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="6"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_rssi"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_gravity="center_horizontal"
                        tools:src="@drawable/rssi2_b"
                        app:rssi="@{blu.rssi}"
                        app:connect="@{blu.isConnected}"/>

                    <TextView
                        android:id="@+id/text_rssi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        android:textColor="@{blu.isConnected ? @android:color/white : @color/primary_text}"
                        android:text="@{blu.rssi}" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/text_blu_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/space_material"
                android:layout_marginStart="@dimen/space_material"
                android:gravity="center_horizontal"
                android:textColor="@{blu.isConnected ? @android:color/white : @color/primary_text}"
                android:text="@{blu.name}"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                android:id="@+id/text_blu_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/space_material"
                android:layout_marginStart="@dimen/space_material"
                android:layout_marginTop="@dimen/space_material"
                android:gravity="center_horizontal"
                android:textColor="@{blu.isConnected ? @android:color/white : @color/primary_text}"
                android:text="@{blu.address}"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@color/divider" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/space_material"
                android:layout_marginStart="@dimen/space_material">

                <ImageButton
                    android:id="@+id/btn_led_green"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentStart="true"
                    android:layout_margin="@dimen/space_material"
                    app:blink="@{greenLed.blink}"
                    app:srcCompat="@drawable/ic_led_green" />

                <ImageButton
                    android:id="@+id/btn_led_yellow"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/space_material"
                    app:blink="@{yellowLed.blink}"
                    app:srcCompat="@drawable/ic_led_yellow" />

                <ImageButton
                    android:id="@+id/btn_led_red"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="@dimen/space_material"
                    android:backgroundTint="@color/red_500"
                    app:blink="@{redLed.blink}"
                    app:srcCompat="@drawable/ic_led_red" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</layout>